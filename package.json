{
  "type": "commonjs",
  "name": "set-assignee-reviewer-when-ready",
  "version": "0.0.1",
  "private": true,
  "description": "A GitHub action to set assignee(s) or reviewer(s) when a PR has finished all checks.",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build src/main.ts --out dist --source-map --license licenses.txt",
    "test": "jest",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test"
  },
  "engines": {
    "node": ">= 18"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ChrisCarini/set-assignee-reviewer-when-ready.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "",
  "license": "Apache-2.0",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.0",
    "@actions/http-client": "^2.2.3",
    "@octokit/rest": "^21.1.0",
    "node-fetch": "^3.2.9"
  },
  "devDependencies": {
    "@types/node": "^22.13.5",
    "@typescript-eslint/parser": "^7.18.0",
    "@vercel/ncc": "^0.38.3",
    "eslint": "^9.19.0",
    "eslint-plugin-github": "^5.1.5",
    "eslint-plugin-jest": "^28.11.0",
    "jest": "^29.7.0",
    "js-yaml": "^4.1.0",
    "prettier": "3.4.2",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.3"
  },
  "volta": {
    "node": "18.18.0"
  }
}
