{
  "type": "commonjs",
  "name": "set-assignee-reviewer-when-ready",
  "version": "0.0.1",
  "private": true,
  "description": "A GitHub action to set assignee(s) or reviewer(s) when a PR has finished all checks.",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build src/main.ts --out dist --source-map --license licenses.txt",
    "test": "jest --passWithNoTests",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test"
  },
  "engines": {
    "node": ">= 24"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ChrisCarini/set-assignee-reviewer-when-ready.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "",
  "license": "Apache-2.0",
  "dependencies": {
    "@actions/core": "^2.0.3",
    "@actions/github": "^7.0.0",
    "@actions/http-client": "^4.0.0",
    "@octokit/rest": "^22.0.1",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin": "^5.7.1",
    "@types/node": "^25.2.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vercel/ncc": "^0.38.4",
    "eslint": "^9.39.2",
    "eslint-plugin-github": "^6.0.0",
    "eslint-plugin-jest": "^29.12.1",
    "jest": "^30.2.0",
    "js-yaml": "^4.1.1",
    "prettier": "3.8.1",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  },
  "volta": {
    "node": "24.5.0"
  }
}
